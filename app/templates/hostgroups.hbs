<div class="row form-group">
  <h1 class="col-md-8">Host Groups</h1>

  <div class="row">
    <div class="title_filter col-md-6">
      <form accept-charset="UTF-8" action="/hostgroups" id="search-form" method="get"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /></div>

        <div class="input-group">
          <input class="autocomplete-input form-control" data-url="/hostgroups/auto_complete_search" id="search" name="search" placeholder="Filter ..." type="text" />
          {{!view Ember.TextField value=search placeholder="search" classNames="search"}}
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search "></i> <span class="hidden-xs">Search</span>
            </button>
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu pull-right">
              <li class="divider"></li>
              <li><a data-url="/bookmarks/new?kontroller=hostgroups" href="#" id="bookmark" onclick="$(&#x27;#bookmarks-modal&#x27;).modal();; return false;">Bookmark this search</a></li>
            </ul>
          </span>
        </div>
      </form>

      <div id="bookmarks-modal" class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">Add Bookmark</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-primary">Submit</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->

            &nbsp;
    </div>
    <div id="title_action" class="col-md-6">
        <div class="btn-toolbar pull-right"><a href="/hostgroups/new" data-id="aid_hostgroups_new" class='btn btn-success'>New Host Group</a> <a href="/hostgroups/help" data-id="aid_hostgroups_help" class='btn btn-default'>Help</a></div>
    </div>

  </div>
</div>

<div class="row">

  <div class='col-md-3 two-pane-left'>

    <table class="table table-bordered table-striped table-two-pane">
      <tr>
        <th><a href="/hostgroups?order=label+ASC">Name</a></th>
      </tr>

      {{#each controller}}
        <tr>
          <td>
            {{#link-to 'hostgroup' this}}
             {{title}}
            {{/link-to}}
          </td>
        </tr>
      {{else}}
        <li>No hostgroups found.</li>
      {{/each}}
    </table>

    <div class="row" id="pagination"><div class="col-md-5 hidden-xs"><div class="pull-left pull-bottom darkgray pagination">Displaying <b>all 32</b> entries</div></div></div>
  </div>

  <div class='col-md-9 two-pane-right' style="border: 1px solid #0072a0">
  {{outlet}}
  </div>
</div>
