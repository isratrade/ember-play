<h2>List of Hostgroups</h2>

<div class='row'>
  <div class='col-md-3'>
<ul>
  {{#each}}
    <li>
      {{#link-to 'hostgroup' this}}
        {{name}}
      {{/link-to}}
    </li>
  {{else}}
    <li>No hostgroups found.</li>
  {{/each}}
</ul>
  </div>
  <div class='col-md-3'>
    {{outlet}}
  </div>
</div>
